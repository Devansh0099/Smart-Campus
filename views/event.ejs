  </style>
</head>
<body>
  <%- include("./partials/navbar") %>

  <div class="container py-5">
    <h1 class="text-center mb-5 fw-bold">üåü Campus Events</h1>
    <% if (user) { %>
      <div class="text-center mb-4">
        <a href="/event/booked" class="btn btn-outline-primary btn-lg">
          üéüÔ∏è View My Booked Events
        </a>
      </div>
    <% } %>
    
    <% if (events.length === 0) { %>
      <p class="text-center text-muted">No events posted yet.</p>
    <% } else { %>
      <div class="row">
        <% events.forEach(event => { %>
          <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
              <% if (event.image) { %>
                <img src="<%= event.image %>" class="card-img-top" style="height: 200px; object-fit: cover;" alt="Event Image">
              <% } %>
              <div class="card-body">
                <h5 class="card-title"><%= event.eventName %></h5>
                <p class="card-text"><%= event.description %></p>
                <p class="card-text">
                  üìç <strong>Location:</strong> <%= event.location %><br>
                  üìÖ <strong>Date:</strong> <%= new Date(event.date).toLocaleDateString() %><br>
                  üí∞ <strong>Price:</strong> ‚Çπ<%= event.price %><br>
                  ü™ë <strong>Seats:</strong> <%= event.totalSeat %>
                  ü™ë <strong>Seats Left:</strong> <%=event.remainingSeat %>
                  <a href="/event/<%= event._id %>" class="btn btn-outline-primary btn-sm mt-2">üîç View</a>
                </p>
              </div>
            </div>
          </div>
        <% }) %>
      </div>
    <% } %>

    <% if (user && user.role === 'admin')  { %>
      <hr class="my-5">
      <h3 class="text-center mb-4">‚ûï Add New Event</h3>
      <div class="card p-4 shadow-sm bg-white">
        <form action="/event/create" method="POST" enctype="multipart/form-data">
          <div class="mb-3">
            <label for="eventName" class="form-label">Event Name</label>
            <input type="text" class="form-control" name="eventName" id="eventName" required>
          </div>

          <div class="mb-3">
            <label for="description" class="form-label">Event Description</label>
            <textarea class="form-control" name="description" id="description" rows="3" required></textarea>
          </div>

          <div class="mb-3">
            <label for="location" class="form-label">Location</label>
            <input type="text" class="form-control" name="location" id="location" required>
          </div>

          <div class="mb-3">
            <label for="date" class="form-label">Event Date</label>
            <input type="date" class="form-control" name="date" id="date" required>
          </div>

          <div class="mb-3">
            <label for="price" class="form-label">Price (‚Çπ)</label>
            <input type="number" class="form-control" name="price" id="price" required min="0">
          </div>

          <div class="mb-3">
            <label for="totalSeat" class="form-label">Total Seats</label>
            <input type="number" class="form-control" name="totalSeat" id="totalSeat" required min="1">
          </div>

          <div class="mb-3">
            <label for="image" class="form-label">Event Image (optional)</label>
            <input type="file" class="form-control" name="image" id="image">
          </div>


          <button type="submit" class="btn btn-success w-100">Create Event</button>
        </form>
      </div>
    <% } %>


    <div class="text-center mt-5">
      <a href="/" class="btn btn-outline-primary">‚¨ÖÔ∏è Back to Home</a>
    </div>
  </div>

  <%- include("./partials/script") %>
 
  
</body>
</html>
